@page
@model Tracking_Events.Pages.Account.Manage.ManageReviewsModel

@{
    ViewData["Title"] = "Manage Reviews";
}

<h2>@ViewData["Title"]</h2>

<form class="form-inline" asp-page="./ManageReviews" method="get">
    <div class="form-group">
        <label>Venue Filter:</label>
        <input name="searchVenue" value="@Model.CurrentVenueSearch" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-info btn-sm" /> |
        <a asp-page="./ManageReviews">Back to full list</a>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Venue.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Event.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Review)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./ManageReviewsEdit" asp-route-eventId="@item.EventID" asp-route-userId="@item.UserID" asp-route-venueId="@item.VenueID">Edit</a> |
                    <a asp-page="./ManageReviewsDelete" asp-route-eventId="@item.EventID" asp-route-userId="@item.UserID" asp-route-venueId="@item.VenueID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
