@page
@model Tracking_Events.Pages.Events.ManageEventsEditModel

@{
    ViewData["Title"] = "Edit Event";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.EventID" />
            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label"></label>
                <input style="text-transform:capitalize" asp-for="Event.EventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Genre" class="control-label"></label>
                <input style="text-transform:capitalize" asp-for="Event.Genre" class="form-control" />
                <span asp-validation-for="Event.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.AgeRequirement" class="control-label"></label>
                <input asp-for="Event.AgeRequirement" class="form-control" />
                <span asp-validation-for="Event.AgeRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.StartTime" class="control-label"></label>
                <input asp-for="Event.StartTime" class="form-control" />
                <span asp-validation-for="Event.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EndTime" class="control-label"></label>
                <input asp-for="Event.EndTime" class="form-control" />
                <span asp-validation-for="Event.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Capacity" class="control-label"></label>
                <input asp-for="Event.Capacity" class="form-control" />
                <span asp-validation-for="Event.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <textarea asp-for="Event.Description" class="form-control"></textarea>
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
