@page
@model Tracking_Events.Pages.Account.Manage.ManageVenuesEditModel

@{
    ViewData["Title"] = "Edit Venue";
}

<h2>@ViewData["Title"]</h2>

<h4>Venue</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<hr />
@if (Model.Venue != null)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Venue.VenueID" />
                <div class="form-group">
                    <label asp-for="Venue.VenueName" class="control-label"></label>
                    <input style="text-transform:capitalize" asp-for="Venue.VenueName" class="form-control" />
                    <span asp-validation-for="Venue.VenueName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.Address" class="control-label"></label>
                    <input style="text-transform:capitalize" asp-for="Venue.Address" class="form-control" />
                    <span asp-validation-for="Venue.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.City" class="control-label"></label>
                    <input style="text-transform:capitalize" asp-for="Venue.City" class="form-control" />
                    <span asp-validation-for="Venue.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.State" class="control-label"></label>
                    <input style="text-transform:uppercase" maxlength="2" asp-for="Venue.State" class="form-control" />
                    <span asp-validation-for="Venue.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.Zip" class="control-label"></label>
                    <input min="0" max="99999" asp-for="Venue.Zip" class="form-control" />
                    <span asp-validation-for="Venue.Zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.Capacity" class="control-label"></label>
                    <input asp-for="Venue.Capacity" class="form-control" />
                    <span asp-validation-for="Venue.Capacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VenueType" class="control-label"></label>
                    <select asp-for="VenueType" asp-items="@Html.GetEnumSelectList<VenueType>()" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success btn-sm" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./ManageVenues">Back to List</a>
    </div>
}
else
{
    <h2>No Venues</h2>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
