@page
@model Tracking_Events.Pages.Account.RegisterVenueModel
@{
    ViewData["Title"] = "Register a Location";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.VenueName"></label>
                <input style="text-transform:capitalize" asp-for="Input.VenueName" class="form-control" />
                <span asp-validation-for="Input.VenueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <input style="text-transform:capitalize" asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <input style="text-transform:capitalize" asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.State"></label>
                <input style="text-transform:uppercase" maxlength="2" asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Zip"></label>
                <input min="0" max="99999" asp-for="Input.Zip" class="form-control" />
                <span asp-validation-for="Input.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Capacity"></label>
                <input asp-for="Input.Capacity" class="form-control" />
                <span asp-validation-for="Input.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.VenueType"></label>
                <select asp-for="Input.VenueType" asp-items="@Html.GetEnumSelectList<VenueType>()" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}